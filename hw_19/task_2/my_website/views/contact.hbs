<div class="view_contact">
	<div class="contact_info">
		<div class="jumbotron">
			<div class="container text-center">
				<h1 class="display-5">Contact me!</h1>
				<br>
				<h5>{{msg}}</h5>
				<form id="contact form" method="post" action="/contact">
					
					<div class="form-group row">
				    <label for="userName" class="col-sm-2 col-form-label">Name</label>
				    <div class="col-sm-10">
				      <input type="text" name="userName" class="form-control" id="userName" placeholder="Your name" required>
				    </div>
				  </div>

				  <div class="form-group row">
				    <label for="userEmail" class="col-sm-2 col-form-label">Email</label>
				    <div class="col-sm-10">
				      <input type="email" name="userEmail" class="form-control" id="userEmail" placeholder="Your email" required>
				    </div>
				  </div>

				  <div class="form-group row">
				    <label for="userPhone" class="col-sm-2 col-form-label">Phone</label>
				    <div class="col-sm-10">
				      <input type="tel" name="userPhone" class="form-control" id="userPhone" placeholder="Your phone number" required>
				    </div>
				  </div>

				  <div class="col-auto">
			      <button type="submit" class="btn btn-primary mb-2">Send message</button>
			    </div>

				</form>
			</div>
		</div>
	</div>
</div>