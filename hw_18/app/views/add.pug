extends layout

block content 
	h1 Курсы академии IMT

	form(method="post")
		fieldset.form-group
			label(for="name") Name:
			input.form-control(name="name", type="text", placeholder="Введите")
			small.text-muted Добавьте новый курс.
		button.btn.btn-primary(type="submit") Создать курс
		a.btn.btn-default(href="/courses") Отмена

